{
  "name": "tonal-build",
  "private": true,
  "main": "dist/tonal.min.js",
  "scripts": {
    "init": "lerna clean && lerna bootstrap && npm run build",
    "format": "prettier --write \"packages/**/{*.js,*.json}\"",
    "prebuild": "npm run format && lerna bootstrap",
    "build": "lerna exec -- rollup -c ../../../rollup.config.js -- index.js",
    "dist": "rollup --config rollup.config.dist.js && ls -hall dist/*",
    "prepublish":
      "npm run test && npm run dist && cp README.md ./packages/tonal/",
    "pretest": "npm run build",
    "test": "jest --coverage --no-cache",
    "docs": "lerna run docs",
    "jsdocs": "jsdoc -c jsdoc3.config.json && open docs/api/index.html"
  },
  "homepage": "https://github.com/danigb/tonal#readme",
  "repository": "https://github.com/danigb/tonal",
  "bugs": {
    "url": "https://github.com/danigb/tonal/issues"
  },
  "author": "danigb@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "jest": "^20.0.0",
    "lerna": "2.1.2",
    "postman-jsdoc-theme": "0.0.3",
    "prettier": "^1.6.1",
    "rollup": "^0.49.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-json": "^2.1.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.0"
  },
  "standard": {
    "ignore": ["dist/*", "build/*"]
  },
  "dependencies": {}
}
